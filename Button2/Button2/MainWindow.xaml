<Window x:Class="Button2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Button2"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800">
    <StackPanel>
        <Label Name="FCC_Label" Foreground="Red">FCC Type</Label>
        <ComboBox Name="FCC" Height="40" Width="100">
        </ComboBox>
        <Button Name="Send_Fault" 
        Click="OnClick" ClickMode="Release" Height="40" Width="100">Send Fault</Button>
    </StackPanel>
</Window>
